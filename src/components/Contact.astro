            class="group relative bg-white rounded-2xl p-6 shadow-md border border-surface hover:shadow-xl transition-all duration-300 hover:-translate-y-2 overflow-hidden"
            style={`animation-delay: ${index * 0.1}s`}
          >
            <!-- Hover background -->
