---

<section id="contact" class="section-padding relative overflow-hidden bg-gradient-to-b from-white via-surface to-white">
  <!-- Animated background -->
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute top-0 left-1/4 w-96 h-96 bg-emerald-200/20 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-0 right-1/4 w-72 h-72 bg-violet-200/20 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
    <div class="absolute top-1/2 left-0 w-64 h-64 bg-cyan-200/20 rounded-full blur-3xl animate-float"></div>
  </div>

  <!-- Floating particles -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    {[...Array(6)].map((_, i) => (
      <div 
        class="absolute w-2 h-2 bg-accent/30 rounded-full animate-float-particle"
        style={`
          left: ${10 + i * 15}%;
          top: ${20 + (i % 3) * 25}%;
          animation-delay: ${i * 0.5}s;
          animation-duration: ${4 + i}s;
        `}
      ></div>
    ))}
  </div>

  <div class="container-custom relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/80 backdrop-blur rounded-full border border-surface mb-4 shadow-sm animate-fade-in-up">
        <span class="w-2 h-2 bg-accent rounded-full animate-ping"></span>
        <span class="text-sm font-medium text-secondary">Let's Connect</span>
      </div>
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold text-primary mb-4 animate-fade-in-up" style="animation-delay: 0.1s;">
        Get In <span class="gradient-text">Touch</span>
      </h2>
      <p class="text-lg text-primary/60 max-w-2xl mx-auto mb-6 animate-fade-in-up" style="animation-delay: 0.2s;">
        Have a project in mind or just want to chat? I'm always open to discussing new opportunities and ideas.
      </p>
      <div class="w-24 h-1 bg-gradient-to-r from-secondary to-accent mx-auto rounded-full animate-scale-x"></div>
    </div>

    <!-- Contact Methods Grid -->
    <div class="grid md:grid-cols-3 gap-6 mb-16">
      {contactMethods.map((method, index) => (
        <div 
          class="group relative bg-white rounded-3xl p-8 shadow-lg border border-surface hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 overflow-hidden cursor-pointer"
          style={`animation-delay: ${index * 0.15}s`}
        >
          <!-- Hover gradient overlay -->
          <div class={`absolute inset-0 bg-gradient-to-br ${method.gradient} opacity-0 group-hover:opacity-5 transition-opacity duration-500`}></div>
          
          <!-- Animated corner accent -->
          <div class="absolute -top-10 -right-10 w-20 h-20 bg-gradient-to-br from-accent/20 to-secondary/20 rounded-full blur-xl group-hover:scale-150 transition-transform duration-700"></div>
          
          <div class="relative z-10">
            <div class={`w-16 h-16 rounded-2xl bg-gradient-to-br ${method.gradient} flex items-center justify-center text-white text-3xl shadow-lg mb-6 group-hover:scale-110 group-hover:rotate-6 transition-all duration-300`}>
              {method.icon === 'rocket' && 'üöÄ'}
              {method.icon === 'briefcase' && 'üíº'}
              {method.icon === 'coffee' && '‚òï'}
            </div>
            
            <h3 class="text-xl font-bold text-primary mb-2 group-hover:text-secondary transition-colors">{method.title}</h3>
            <p class="text-primary/60 mb-6 text-sm leading-relaxed">{method.description}</p>
            
            <button class={`inline-flex items-center gap-2 px-6 py-3 rounded-full bg-surface text-secondary font-semibold group-hover:bg-gradient-to-r ${method.gradient} group-hover:text-white transition-all duration-300`}>
              {method.action}
              <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </button>
          </div>
        </div>
      ))}
    </div>

    <!-- Main CTA Card -->
    <div class="relative max-w-4xl mx-auto mb-16">
      <div class="absolute -inset-1 bg-gradient-to-r from-secondary via-accent to-secondary rounded-[2.5rem] blur-lg opacity-30 animate-pulse"></div>
      
      <div class="relative bg-white rounded-[2rem] p-8 md:p-12 shadow-2xl border border-surface overflow-hidden">
        <!-- Background pattern -->
        <div class="absolute inset-0 opacity-5">
          <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
            <pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse">
              <circle cx="1" cy="1" r="1" fill="currentColor"/>
            </pattern>
            <rect width="100" height="100" fill="url(#grid)"/>
          </svg>
        </div>

        <div class="relative z-10 text-center">
          <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-gradient-to-br from-secondary to-accent text-white text-4xl mb-6 shadow-lg animate-bounce-slow">
            üëã
