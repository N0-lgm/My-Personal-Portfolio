<section class="section-padding relative overflow-hidden bg-gradient-to-b from-white via-surface to-white">
  <!-- Animated background elements -->
  <div class="absolute top-0 left-0 w-full h-full overflow-hidden pointer-events-none">
    <div class="absolute top-20 left-10 w-64 h-64 bg-emerald-200/30 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-20 right-10 w-96 h-96 bg-cyan-200/20 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-gradient-to-r from-emerald-100/40 to-cyan-100/40 rounded-full blur-3xl animate-spin" style="animation-duration: 20s;"></div>
  </div>

  <div class="container-custom relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/80 backdrop-blur rounded-full border border-surface mb-4 shadow-sm">
        <span class="w-2 h-2 bg-accent rounded-full animate-ping"></span>
        <span class="text-sm font-medium text-secondary">Tech Stack</span>
      </div>
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold text-primary mb-4">
        Tools & <span class="gradient-text">Technologies</span>
      </h2>
      <p class="text-lg text-primary/60 max-w-2xl mx-auto">
        My creative arsenal for building exceptional digital experiences
      </p>
    </div>

    <!-- Skills Grid -->
    <div class="grid lg:grid-cols-2 gap-8">
      {skillCategories.map((category, catIndex) => (
        <div 
          class="group relative bg-white/80 backdrop-blur-xl rounded-3xl p-8 border border-surface shadow-lg hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 overflow-hidden"
          style={`animation-delay: ${catIndex * 150}ms`}
        >
          <!-- Category gradient header -->
          <div class={`absolute top-0 left-0 right-0 h-1 bg-gradient-to-r ${category.color} transform origin-left transition-transform duration-500 scale-x-0 group-hover:scale-x-100`}></div>
          
          <!-- Background glow on hover -->
          <div class={`absolute -inset-1 bg-gradient-to-r ${category.color} opacity-0 group-hover:opacity-10 blur-xl transition-opacity duration-500 -z-10`}></div>
          
          <div class="flex items-center gap-3 mb-8">
            <div class={`w-3 h-3 rounded-full bg-gradient-to-r ${category.color} animate-pulse`}></div>
            <h3 class="text-xl font-bold text-primary group-hover:text-secondary transition-colors duration-300">
              {category.title}
            </h3>
          </div>

          <!-- Skills Orbit Layout -->
          <div class="relative h-64 md:h-80">
            {category.skills.map((skill, index) => {
              const total = category.skills.length;
              const angle = (index / total) * 2 * Math.PI - Math.PI / 2;
              const radius = 90;
              const x = Math.cos(angle) * radius;
              const y = Math.sin(angle) * radius;
              
              return (
                <div 
                  class="skill-orbit absolute left-1/2 top-1/2 transform -translate-x-1/2 -translate-y-1/2"
                  style={`--orbit-x: ${x}px; --orbit-y: ${y}px; --delay: ${index * 0.1}s;`}
                >
                  <div class="skill-card group/skill relative">
                    <!-- Glow effect -->
                    <div class="absolute inset-0 bg-gradient-to-r from-emerald-400 to-cyan-400 rounded-2xl blur-lg opacity-0 group-hover/skill:opacity-40 transition-opacity duration-300"></div>
                    
                    <!-- Card -->
                    <div class="relative w-16 h-16 md:w-20 md:h-20 bg-white rounded-2xl border border-surface shadow-md hover:shadow-xl transition-all duration-300 hover:scale-110 hover:-rotate-3 flex items-center justify-center cursor-pointer overflow-hidden group-hover/skill:border-emerald-300">
                      
